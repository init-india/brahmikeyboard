<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#f0f0f0">

    <!-- Preview Bar -->
    <TextView
        android:id="@+id/preview_bar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:padding="8dp"
        android:text="@string/preview_hint"
        android:textSize="16sp"
        android:textColor="#333333" />

    <!-- Main Alphabet Layout -->
    <LinearLayout
        android:id="@+id/layout_alphabet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="2dp"
        android:visibility="visible">

        <!-- Row 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button android:id="@+id/key_q" android:layout_width="0dp" android:layout_height="48dp" android:layout_weight="1" android:text="q" android:layout_margin="1dp"/>
            <Button android:id="@+id/key_w" android:layout_width="0dp" android:layout_height="48dp" android:layout_weight="1" android:text="w" android:layout_margin="1dp"/>
            <Button android:id="@+id/key_e" android:layout_width="0dp" android:layout_height="48dp" android:layout_weight="1" android:text="e" android:layout_margin="1dp"/>
            <Button android:id="@+id/key_r" android:layout_width="0dp" android:layout_height="48dp" android:layout_weight="1" android:text="r" android:layout_margin="1dp"/>
            <Button android:id="@+id/key_t" android:layout_width="0dp" android:layout_height="48dp" android:layout_weight="1" android:text="t" android:layout_margin="1dp"/>
            <Button android:id="@+id/key_y" android:layout_width="0dp" android:layout_height="48dp" android:layout_weight="1" android:text="y" android:layout_margin="1dp"/>
            <Button android:id="@+id/key_u" android:layout_width="0dp" android:layout_height="48dp" android:layout_weight="1" android:text="u" android:layout_margin="1dp"/>
            <Button android:id="@+id/key_i" android:layout_width="0dp" android:layout_height="48dp" android:layout_weight="1" android:text="i" android:layout_margin="1dp"/>
            <Button android:id="@+id/key_o" android:layout_width="0dp" android:layout_height="48dp" android:layout_weight="1" android:text="o" android:layout_margin="1dp"/>
            <Button android:id="@+id/key_p" android:layout_width="0dp" android:layout_height="48dp" android:layout_weight="1" android:text="p" android:layout_margin="1dp"/>

        </LinearLayout>

        <!-- Row 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button android:id="@+id/key_a" android:layout_width="0dp" android:layout_height="48dp" android:layout_weight="1" android:text="a" android:layout_margin="1dp"/>
            <Button android:id="@+id/key_s" android:layout_width="0dp" android:layout_height="48dp" android:layout_weight="1" android:text="s" android:layout_margin="1dp"/>
            <Button android:id="@+id/key_d" android:layout_width="0dp" android:layout_height="48dp" android:layout_weight="1" android:text="d" android:layout_margin="1dp"/>
            <Button android:id="@+id/key_f" android:layout_width="0dp" android:layout_height="48dp" android:layout_weight="1" android:text="f" android:layout_margin="1dp"/>
            <Button android:id="@+id/key_g" android:layout_width="0dp" android:layout_height="48dp" android:layout_weight="1" android:text="g" android:layout_margin="1dp"/>
            <Button android:id="@+id/key_h" android:layout_width="0dp" android:layout_height="48dp" android:layout_weight="1" android:text="h" android:layout_margin="1dp"/>
            <Button android:id="@+id/key_j" android:layout_width="0dp" android:layout_height="48dp" android:layout_weight="1" android:text="j" android:layout_margin="1dp"/>
            <Button android:id="@+id/key_k" android:layout_width="0dp" android:layout_height="48dp" android:layout_weight="1" android:text="k" android:layout_margin="1dp"/>
            <Button android:id="@+id/key_l" android:layout_width="0dp" android:layout_height="48dp" android:layout_weight="1" android:text="l" android:layout_margin="1dp"/>
            <Button android:id="@+id/key_backspace" android:layout_width="0dp" android:layout_height="48dp" android:layout_weight="1" android:text="âŒ«" android:layout_margin="1dp"/>

        </LinearLayout>

        <!-- Row 3 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button android:id="@+id/key_shift" android:layout_width="0dp" android:layout_height="48dp" android:layout_weight="1.5" android:text="â‡§" android:layout_margin="1dp"/>
            <Button android:id="@+id/key_z" android:layout_width="0dp" android:layout_height="48dp" android:layout_weight="1" android:text="z" android:layout_margin="1dp"/>
            <Button android:id="@+id/key_x" android:layout_width="0dp" android:layout_height="48dp" android:layout_weight="1" android:text="x" android:layout_margin="1dp"/>
            <Button android:id="@+id/key_c" android:layout_width="0dp" android:layout_height="48dp" android:layout_weight="1" android:text="c" android:layout_margin="1dp"/>
            <Button android:id="@+id/key_v" android:layout_width="0dp" android:layout_height="48dp" android:layout_weight="1" android:text="v" android:layout_margin="1dp"/>
            <Button android:id="@+id/key_b" android:layout_width="0dp" android:layout_height="48dp" android:layout_weight="1" android:text="b" android:layout_margin="1dp"/>
            <Button android:id="@+id/key_n" android:layout_width="0dp" android:layout_height="48dp" android:layout_weight="1" android:text="n" android:layout_margin="1dp"/>
            <Button android:id="@+id/key_m" android:layout_width="0dp" android:layout_height="48dp" android:layout_weight="1" android:text="m" android:layout_margin="1dp"/>
            <Button android:id="@+id/key_enter" android:layout_width="0dp" android:layout_height="48dp" android:layout_weight="1.5" android:text="âŽ" android:layout_margin="1dp"/>

        </LinearLayout>

        <!-- Row 4 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button android:id="@+id/key_numpad" android:layout_width="0dp" android:layout_height="48dp" android:layout_weight="1" android:text="123" android:layout_margin="1dp"/>
            <Button android:id="@+id/key_symbols" android:layout_width="0dp" android:layout_height="48dp" android:layout_weight="1" android:text="#+=" android:layout_margin="1dp"/>
	    <Button android:id="@+id/key_mode" android:layout_width="0dp" android:layout_height="48dp" android:layout_weight="1" android:text="Mode" android:layout_margin="1dp"/>
            <Button android:id="@+id/key_space" android:layout_width="0dp" android:layout_height="48dp" android:layout_weight="3" android:text="Space" android:layout_margin="1dp"/>
            <Button android:id="@+id/key_lang" android:layout_width="0dp" android:layout_height="48dp" android:layout_weight="1" android:text="ðŸŒ" android:layout_margin="1dp"/>
            <Button android:id="@+id/key_settings" android:layout_width="0dp" android:layout_height="48dp" android:layout_weight="1" android:text="âš™" android:layout_margin="1dp"/>

        </LinearLayout>

    </LinearLayout>

    <!-- Numpad Layout -->
    <LinearLayout
        android:id="@+id/layout_numpad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="2dp"
        android:visibility="gone">

        <!-- Row 1 -->
        <LinearLayout 
            android:layout_width="match_parent" 
            android:layout_height="wrap_content" 
            android:orientation="horizontal" 
            android:gravity="center">
            
            <Button android:id="@+id/key_1" android:layout_width="0dp" android:layout_height="48dp" android:layout_weight="1" android:text="1" android:layout_margin="1dp"/>
            <Button android:id="@+id/key_2" android:layout_width="0dp" android:layout_height="48dp" android:layout_weight="1" android:text="2" android:layout_margin="1dp"/>
            <Button android:id="@+id/key_3" android:layout_width="0dp" android:layout_height="48dp" android:layout_weight="1" android:text="3" android:layout_margin="1dp"/>
            <Button android:id="@+id/key_backspace_num" android:layout_width="0dp" android:layout_height="48dp" android:layout_weight="1" android:text="âŒ«" android:layout_margin="1dp"/>
            
        </LinearLayout>

        <!-- Row 2 -->
        <LinearLayout 
            android:layout_width="match_parent" 
            android:layout_height="wrap_content" 
            android:orientation="horizontal" 
            android:gravity="center">
            
            <Button android:id="@+id/key_4" android:layout_width="0dp" android:layout_height="48dp" android:layout_weight="1" android:text="4" android:layout_margin="1dp"/>
            <Button android:id="@+id/key_5" android:layout_width="0dp" android:layout_height="48dp" android:layout_weight="1" android:text="5" android:layout_margin="1dp"/>
            <Button android:id="@+id/key_6" android:layout_width="0dp" android:layout_height="48dp" android:layout_weight="1" android:text="6" android:layout_margin="1dp"/>
            <Button android:id="@+id/key_plus" android:layout_width="0dp" android:layout_height="48dp" android:layout_weight="1" android:text="+" android:layout_margin="1dp"/>
            
        </LinearLayout>

        <!-- Row 3 -->
        <LinearLayout 
            android:layout_width="match_parent" 
            android:layout_height="wrap_content" 
            android:orientation="horizontal" 
            android:gravity="center">
            
            <Button android:id="@+id/key_7" android:layout_width="0dp" android:layout_height="48dp" android:layout_weight="1" android:text="7" android:layout_margin="1dp"/>
            <Button android:id="@+id/key_8" android:layout_width="0dp" android:layout_height="48dp" android:layout_weight="1" android:text="8" android:layout_margin="1dp"/>
            <Button android:id="@+id/key_9" android:layout_width="0dp" android:layout_height="48dp" android:layout_weight="1" android:text="9" android:layout_margin="1dp"/>
            <Button android:id="@+id/key_minus" android:layout_width="0dp" android:layout_height="48dp" android:layout_weight="1" android:text="-" android:layout_margin="1dp"/>
            
        </LinearLayout>

        <!-- Row 4 -->
        <LinearLayout 
            android:layout_width="match_parent" 
            android:layout_height="wrap_content" 
            android:orientation="horizontal" 
            android:gravity="center">
            
            <Button android:id="@+id/key_0" android:layout_width="0dp" android:layout_height="48dp" android:layout_weight="2" android:text="0" android:layout_margin="1dp"/>
            <Button android:id="@+id/key_dot" android:layout_width="0dp" android:layout_height="48dp" android:layout_weight="1" android:text="." android:layout_margin="1dp"/>
            <Button android:id="@+id/key_comma" android:layout_width="0dp" android:layout_height="48dp" android:layout_weight="1" android:text="," android:layout_margin="1dp"/>
            <Button android:id="@+id/key_enter_num" android:layout_width="0dp" android:layout_height="48dp" android:layout_weight="1" android:text="âŽ" android:layout_margin="1dp"/>
            
        </LinearLayout>

        <!-- Row 5 -->
        <LinearLayout 
            android:layout_width="match_parent" 
            android:layout_height="wrap_content" 
            android:orientation="horizontal" 
            android:gravity="center">
            
            <Button android:id="@+id/key_abc_num" android:layout_width="0dp" android:layout_height="48dp" android:layout_weight="1" android:text="ABC" android:layout_margin="1dp"/>
            <Button android:id="@+id/key_space_num" android:layout_width="0dp" android:layout_height="48dp" android:layout_weight="2" android:text="Space" android:layout_margin="1dp"/>
            <Button android:id="@+id/key_equals" android:layout_width="0dp" android:layout_height="48dp" android:layout_weight="1" android:text="=" android:layout_margin="1dp"/>
            <Button android:id="@+id/key_percent_num" android:layout_width="0dp" android:layout_height="48dp" android:layout_weight="1" android:text="%" android:layout_margin="1dp"/>
            
        </LinearLayout>

    </LinearLayout>

    <!-- Symbols Layout -->
    <LinearLayout
        android:id="@+id/layout_symbols"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="2dp"
        android:visibility="gone">

        <!-- Row 1 -->
        <LinearLayout 
            android:layout_width="match_parent" 
            android:layout_height="wrap_content" 
            android:orientation="horizontal" 
            android:gravity="center">
            
            <Button android:id="@+id/key_excl" android:layout_width="0dp" android:layout_height="48dp" android:layout_weight="1" android:text="!" android:layout_margin="1dp"/>
            <Button android:id="@+id/key_at" android:layout_width="0dp" android:layout_height="48dp" android:layout_weight="1" android:text="@" android:layout_margin="1dp"/>
            <Button android:id="@+id/key_hash" android:layout_width="0dp" android:layout_height="48dp" android:layout_weight="1" android:text="#" android:layout_margin="1dp"/>
            <Button android:id="@+id/key_dollar" android:layout_width="0dp" android:layout_height="48dp" android:layout_weight="1" android:text="$" android:layout_margin="1dp"/>
            <Button android:id="@+id/key_percent" android:layout_width="0dp" android:layout_height="48dp" android:layout_weight="1" android:text="%" android:layout_margin="1dp"/>
            
        </LinearLayout>

        <!-- Row 2 -->
        <LinearLayout 
            android:layout_width="match_parent" 
            android:layout_height="wrap_content" 
            android:orientation="horizontal" 
            android:gravity="center">
            
            <Button android:id="@+id/key_caret" android:layout_width="0dp" android:layout_height="48dp" android:layout_weight="1" android:text="^" android:layout_margin="1dp"/>
            <Button android:id="@+id/key_amp" android:layout_width="0dp" android:layout_height="48dp" android:layout_weight="1" android:text="&amp;" android:layout_margin="1dp"/>
            <Button android:id="@+id/key_star" android:layout_width="0dp" android:layout_height="48dp" android:layout_weight="1" android:text="*" android:layout_margin="1dp"/>
            <Button android:id="@+id/key_lparen" android:layout_width="0dp" android:layout_height="48dp" android:layout_weight="1" android:text="(" android:layout_margin="1dp"/>
            <Button android:id="@+id/key_rparen" android:layout_width="0dp" android:layout_height="48dp" android:layout_weight="1" android:text=")" android:layout_margin="1dp"/>
            
        </LinearLayout>

        <!-- Row 3 -->
        <LinearLayout 
            android:layout_width="match_parent" 
            android:layout_height="wrap_content" 
            android:orientation="horizontal" 
            android:gravity="center">
            
            <Button android:id="@+id/key_underscore" android:layout_width="0dp" android:layout_height="48dp" android:layout_weight="1" android:text="_" android:layout_margin="1dp"/>
            <Button android:id="@+id/key_plus_sym" android:layout_width="0dp" android:layout_height="48dp" android:layout_weight="1" android:text="+" android:layout_margin="1dp"/>
            <Button android:id="@+id/key_equals_sym" android:layout_width="0dp" android:layout_height="48dp" android:layout_weight="1" android:text="=" android:layout_margin="1dp"/>
            <Button android:id="@+id/key_lbrace" android:layout_width="0dp" android:layout_height="48dp" android:layout_weight="1" android:text="{" android:layout_margin="1dp"/>
            <Button android:id="@+id/key_rbrace" android:layout_width="0dp" android:layout_height="48dp" android:layout_weight="1" android:text="}" android:layout_margin="1dp"/>
            
        </LinearLayout>

        <!-- Row 4 -->
        <LinearLayout 
            android:layout_width="match_parent" 
            android:layout_height="wrap_content" 
            android:orientation="horizontal" 
            android:gravity="center">
            
            <Button android:id="@+id/key_slash" android:layout_width="0dp" android:layout_height="48dp" android:layout_weight="1" android:text="/" android:layout_margin="1dp"/>
            <Button android:id="@+id/key_backslash" android:layout_width="0dp" android:layout_height="48dp" android:layout_weight="1" android:text="\" android:layout_margin="1dp"/>
            <Button android:id="@+id/key_pipe" android:layout_width="0dp" android:layout_height="48dp" android:layout_weight="1" android:text="|" android:layout_margin="1dp"/>
            <Button android:id="@+id/key_lt" android:layout_width="0dp" android:layout_height="48dp" android:layout_weight="1" android:text="&lt;" android:layout_margin="1dp"/>
            <Button android:id="@+id/key_gt" android:layout_width="0dp" android:layout_height="48dp" android:layout_weight="1" android:text=">" android:layout_margin="1dp"/>
            
        </LinearLayout>

        <!-- Row 5 -->
        <LinearLayout 
            android:layout_width="match_parent" 
            android:layout_height="wrap_content" 
            android:orientation="horizontal" 
            android:gravity="center">
            
            <Button android:id="@+id/key_abc_sym" android:layout_width="0dp" android:layout_height="48dp" android:layout_weight="1" android:text="ABC" android:layout_margin="1dp"/>
            <Button android:id="@+id/key_space_sym" android:layout_width="0dp" android:layout_height="48dp" android:layout_weight="2" android:text="Space" android:layout_margin="1dp"/>
            <Button android:id="@+id/key_dot_sym" android:layout_width="0dp" android:layout_height="48dp" android:layout_weight="1" android:text="." android:layout_margin="1dp"/>
            <Button android:id="@+id/key_comma_sym" android:layout_width="0dp" android:layout_height="48dp" android:layout_weight="1" android:text="," android:layout_margin="1dp"/>
            <Button android:id="@+id/key_enter_sym" android:layout_width="0dp" android:layout_height="48dp" android:layout_weight="1" android:text="âŽ" android:layout_margin="1dp"/>
            
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
